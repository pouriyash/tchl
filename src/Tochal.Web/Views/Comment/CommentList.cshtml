@{
    int count = 1;
}
@using Tochal.Toolkit
@using Tochal.Web.Helpers
@using Exir.Regate
@model List<Tochal.Core.DomainModels.Entity.Comment>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">داشبورد</a></li>
        <li class="breadcrumb-item " aria-current="page"><a href="/Comment/Index">لیست کامنت ها</a></li>
        <li class="breadcrumb-item active" aria-current="page">کامنت ها</li>
    </ol>
</nav>
<div class="hpanel">
    <div class="tab-content tab-content-flex">
        <div id="tab-5" class="tab-pane active">
            <div class="panel-right">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="hpanel horange margin-bottom-0">
                            <div class="size-15 panel-heading hbuilt main__form">
                                لیست کامنت ها
                            </div>

                            <div class="panel-body panel-scroll" data-equalheight="box">
                                @*<div class="col-xs-12">
                                        <div class="filterbox mt mb">
                                            <form class="form-inline" asp-action="Index" method="Get">
                                                <div class="form-group">
                                                    <label style="margin-right: 10px">جستجو بر اساس عنوان</label>
                                                    <input type="text" class="form-control" name="term" value="@Model.SearchCriteria.Term" />
                                                    <button id="btnSearch" type="submit" class="btn btn-info">جستجو</button>
                                                </div>
                                                <input type="hidden" name="PageSize" value="@Model.SearchCriteria.PageSize" />
                                                <input type="hidden" name="Page" value="@Model.SearchCriteria.Page" />
                                            </form>
                                        </div>
                                    </div>*@


                                <div class="col-xs-12">
                                    <hr>

                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover table-valigned">
                                            <thead>
                                                <tr>
                                                    <th class="text-center"> ردیف </th>
                                                    <th class="text-center"> نام </th>
                                                    <th class="text-center"> متن  </th>
                                                    <th class="text-center"> وضعیت  </th>
                                                    <th class="text-center">اقدامات</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @{

                                                    foreach (var item in Model)
                                                    {
                                                        count++;
                                                        <tr>
                                                            <td>@count.ToPersianNumbers()</td>
                                                            <td>@item.Name</td>
                                                            <td>@item.Text</td>
                                                            <td style="background-color:@(item.IsShow?"#66BB6A":"#FF8A80")">@(item.IsShow == true ? "نمایش" : "عدم نمایش")</td>
                                                            <td>
                                                                <span @Html.Raw(FancyboxHelper.Button())>

                                                                    <a asp-action="Update" asp-controller="Comment" asp-route-Id="@item.Id">
                                                                        <i class="fa fa-edit fa-lg text-warning" aria-hidden="true">

                                                                        </i>
                                                                    </a>
                                                                </span>

                                                                <span @Html.Raw(FancyboxHelper.Button())>
                                                                    <a asp-action="Delete" data-role="Confirm" asp-controller="Comment" asp-route-Id="@item.Id">
                                                                        <i class="fa fa-trash fa-lg text-danger" aria-hidden="true">

                                                                        </i>
                                                                    </a>
                                                                </span>

                                                            </td>

                                                        </tr>
                                                    }

                                                }
                                            </tbody>
                                        </table>

                                        @*@Html.Partial("_Paging", Model.PageModel)*@

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

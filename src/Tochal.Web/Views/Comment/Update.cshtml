@{
    int count = 1;
}
@model Tochal.Core.DomainModels.Entity.Comment
@using Tochal.Toolkit
@using Exir.Regate
@Html.Raw(Styles.MakeLayoutBlank())
<div class="hpanel">
    <div class="tab-content tab-content-flex">
        <div id="tab-5" class="tab-pane active">
            <div class="panel-body">
                <a class="slideToggle">
                    <div id="hamburger-menu">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </a>

                <div class="panel-right">
                    <div class="row">

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <form class="form-horizontal" asp-controller="Comment" asp-action="update" method="post">
                                <input type="hidden" value="@Model.Id" name="id" />
                                <div class="hpanel horange margin-bottom-0">
                                    <div class="size-15 panel-heading hbuilt main__form">بروزرسانی </div>
                                    <div class="panel-body panel-scroll" data-equalheight="box">
                                        <div class="form-card">

                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <div class="form-element form-input">
                                                    <input asp-for="Name" id="field-Name" class="form-element-field" placeholder="نام و نام خانوادگی " type="text">
                                                    <div class="form-element-bar"></div>
                                                    <label class="form-element-label" for="field-Name">نام و نام خانوادگی </label>
                                                </div>
                                            </div>

                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <div class="form-element form-input">
                                                    <textarea id="field-Name" class="form-element-field" name="Text">
@Model.Text
                                                    </textarea>
                                                    <div class="form-element-bar"></div>
                                                    <label class="form-element-label" for="field-Name">متن </label>
                                                </div>
                                            </div>

                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <div class="form-element form-input">
                                                    <textarea id="field-Name" class="form-element-field" name="answer">
@Model.Answer
                                                    </textarea>
                                                    <div class="form-element-bar"></div>
                                                    <label class="form-element-label" for="field-Name">پاسخ </label>
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <div class="form-element form-input">
                                                    <label>وضعیت نمایش</label>
                                                    @Html.Raw(RegateSwitch.Build("IsShow", Model.IsShow))
                                                </div>
                                            </div>
                                           
                                            <div class="col-xs-12">
                                                <input class="btn w-lg btn-success pull-right m-t-lg" type="submit" value="ویرایش اطلاعات">
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


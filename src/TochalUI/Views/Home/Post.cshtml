                            <div>
                                <span> <a asp-action="Detail" asp-route-DetailType="@DetailType" asp-route-Id="@item.Id">@item.Title</a></span>
                            </div>
                            <h1>@item.SubTitle</h1>
                            <p>
                                @item.ShortContent
                            </p>
                        </div>
                    </article>
                }
            }

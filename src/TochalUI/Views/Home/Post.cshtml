    <section class="background">
        <div class="bg-gradient" style="background-color: rgba(0, 0, 0, 0.05);height: 65px;position: absolute;width: 100%;"></div>
        <div class="backgroundImage">
            <img src="~/images/background.jpg" alt="background" />

        <div class="s-btns" style="position:absolute;right:0;">
            @*@foreach (var item in Model)
            {
                <a href="#seasons" onclick="seasonSlider(@(count++))">@item.Title</a>

            }*@
            <a href="#seasons" onclick="seasonSlider(@(count++))">@Model.SpringTitle</a>
            <a href="#seasons" onclick="seasonSlider(@(count++))">@Model.SummerTitle</a>
            <a href="#seasons" onclick="seasonSlider(@(count++))">@Model.AutumnTitle</a>
            <a href="#seasons" onclick="seasonSlider(@(count++))">@Model.WinterTitle</a>

        </div>
    </section>

@using Tochal.Core.DomainModels.Entity.Blog
@using Tochal.Core.DomainModels.SSOT
@model Tochal.Core.DomainModels.Entity.Season
@using Microsoft.Extensions.Options
@inject IOptions<FileConfig>  fileConfig

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    int count = 0;
}
    <section class="seasons" style="box-shadow:none">

        @* spring *@
        <div class="s-img" style="display: none;">
            <img src="@fileConfig.Value.WebAddress@Model.SpringHeaderImage" alt="">
        </div>
        <div class="s-text">
            <h3><span>@Model.SpringShortDescription</span></h3>
            @* <h3>@Localizer["TochalIn"] <span>@item.ShortContent</span></h3>*@
            <div class="wrapMe">
                @Html.Raw(Model.SpringContent)
            </div>
            <div class="s-more">
                <a href="~/Home/Spring"><i class="fas fa-angle-left"></i>@Localizer["More"]</a>
            </div>
        </div>

        @* summer *@
